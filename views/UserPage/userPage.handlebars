<section class="intent-space">
</section>

<section class="question-section">
    <div class="container">
        <div class="question-box jq-question-box">

            <div class="question">
                <a href="#">My Pages</a>
            </div>
            <div class="questionDesctiption">
                <p>{{user.username}}</p>
            </div>
        </div>
    </div>

    </div>
</section>
<h2>
    Your Post Answer
</h2>
{{#each answerArray}}
<div class="answer_and_comment">
    <section class="answer-section">
        <div class="container">

            <div class="answer-box">
                <div class="Author">
                    <p>{{username}}</p>
                </div>
                <div class="answer">
                    <p>{{answer}}</a>
                </div>
                <div class="from question">
                    <p>From : {{questionTitle}}</p>
                </div>
            </div>
        </div>
    </section>
</div>
{{/each}}

<hr width="100%" size="3" color="#00ffff" style="filter:progid:DXImageTransform.Microsoft.Shadow(color:#f6ae56,direction:145,strength:15)"> 
<h2>
    Your Post Question
</h2>
{{#each questionArray }}

<div class="answer_and_comment">
    <section class="answer-section">
        <div class="container">
            <div class="answer-box">
                <div class="answer">
                    <a href="/question/{{questionId}}">{{question}}</a>
                </div>
            </div>
        </div>
    </section>
</div>
